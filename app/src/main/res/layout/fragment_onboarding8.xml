<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    style="@style/BackgroundFon"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ConstraintLayoutOnbarding8"
        android:layout_width="match_parent"
        android:layout_height="504dp"
        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="504dp"
            android:contentDescription="Image"
            android:scaleType="centerCrop"
            android:src="@drawable/onbarding8"
            tools:ignore="HardcodedText"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="239dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            style="@style/ViewOnbarding" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/onbarding8TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/onbarding_glav_text"
        android:textSize="24sp"
        style="@style/OsnovnoiText"
        android:fontFamily="@font/sf_pro_display_bold"
        app:layout_constraintTop_toBottomOf="@id/ConstraintLayoutOnbarding8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="HardcodedText" />

    <TextView
        style="@style/DescriptionOnbarding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="60dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/sf_pro_display_medium"
        android:gravity="center"
        android:text="@string/onbarding8_description"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/onbarding8TextView"
        app:layout_constraintStart_toStartOf="@+id/onbarding8TextView"
        app:layout_constraintTop_toBottomOf="@id/onbarding8TextView"
        tools:ignore="HardcodedText" />



</androidx.constraintlayout.widget.ConstraintLayout>