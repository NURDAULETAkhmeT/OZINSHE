<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    style="@style/BackgroundFon"
    android:layout_height="match_parent"
    tools:context=".RegestraciaFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_marginHorizontal="24dp"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/regestrasia_image_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="68dp"
            style="@style/BackLeftOutline"
            android:background="@android:color/transparent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/regestrasia_salem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/sf_pro_display_bold"
            android:gravity="center_vertical"
            android:text="@string/vhod_regis_button"
            style="@style/OsnovnoiText"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/regestrasia_image_button" />

        <TextView
            android:id="@+id/regestrasia_kiriniz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_display_regular"
            android:text="@string/regis_glav_description"
            style="@style/DescriptionOnbarding"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/regestrasia_salem" />

        <TextView
            android:id="@+id/regestrasia_emaill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="29dp"
            android:fontFamily="@font/sf_pro_display_bold"
            android:text="Email"
            style="@style/OsnovnoiText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/regestrasia_kiriniz" />

        <LinearLayout
            android:id="@+id/regestrasia_linear_email"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="4dp"
            style="@style/ShapeVhod"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/regestrasia_emaill"
            tools:ignore="InvalidId">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:src="@drawable/vhod_message" />

            <EditText
                android:id="@+id/regestrasia_editTextTextEmailAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="8dp"
                android:background="#00FFFFFF"
                android:ems="15"
                android:hint="@string/vhod_emaill_tint"
                android:inputType="textEmailAddress"
                android:minHeight="48dp"
                style="@style/OsnovnoiText"
                android:textColorHint="#9CA3AF"
                android:textSize="16sp"
                tools:ignore="SpeakableTextPresentCheck" />

        </LinearLayout>

        <TextView
            android:id="@+id/regestrasia_text_parol1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:fontFamily="@font/sf_pro_display_bold"
            android:text="@string/vhod_password_text"
            style="@style/OsnovnoiText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/regestrasia_linear_email"
            tools:ignore="UnknownId" />

        <LinearLayout
            android:id="@+id/regestrasia_linear_password1"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="4dp"
            style="@style/ShapeVhod"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/regestrasia_text_parol1"
            tools:ignore="InvalidId">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:src="@drawable/vhod_password" />

            <EditText
                android:id="@+id/regestrasia_edit_password1"
                android:layout_width="265dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="8dp"
                android:background="#00FFFFFF"
                android:ems="14"
                android:hint="@string/vhod_password_tint"
                android:inputType="textPassword"
                android:minHeight="48dp"
                style="@style/OsnovnoiText"
                android:textColorHint="#9CA3AF"
                android:textSize="16sp" />

            <ImageButton
                android:id="@+id/regestrasia_show_password1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@android:color/transparent"
                android:src="@drawable/vhod_show"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        </LinearLayout>

        <TextView
            android:id="@+id/regestrasia_text_parol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:fontFamily="@font/sf_pro_display_bold"
            android:text="@string/regis_password_pavtor"
            style="@style/OsnovnoiText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/regestrasia_linear_password1"
            tools:ignore="UnknownId" />

        <LinearLayout
            android:id="@+id/regestrasia_linear_password"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="4dp"
            style="@style/ShapeVhod"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/regestrasia_text_parol"
            tools:ignore="InvalidId">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:src="@drawable/vhod_password" />

            <EditText
                android:id="@+id/regestrasia_edit_password"
                android:layout_width="265dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="8dp"
                android:background="#00FFFFFF"
                android:ems="14"
                android:hint="@string/vhod_password_tint"
                android:inputType="textPassword"
                android:minHeight="48dp"
                style="@style/OsnovnoiText"
                android:textColorHint="#9CA3AF"
                android:textSize="16sp"
                tools:ignore="DuplicateIds" />

            <ImageButton
                android:id="@+id/regestrasia_show_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@android:color/transparent"
                android:src="@drawable/vhod_show"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        </LinearLayout>

        <TextView
            android:id="@+id/regestrasia_text_skriti_oshibka"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:textSize="14sp"
            android:fontFamily="@font/sf_pro_display_medium"
            android:textColor="#FF402B"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/regestrasia_linear_password" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="102dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/regestrasia_text_skriti_oshibka"
            android:layout_marginTop="40dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/regestrasia_button_kiru"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:textColor="#FFFFFF"
                android:background="@drawable/shape_button_nove"
                android:text="@string/vhod_regis_button"
                android:textSize="16sp"
                android:fontFamily="@font/sf_pro_display_semibold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="24dp">

                <TextView
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    style="@style/DescriptionVhod"
                    android:text="@string/regis_vhod_text"
                    android:gravity="end"/>

                <TextView
                    android:id="@+id/regestrasia_text_vhod_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@string/vhod_button_kiru"
                    android:textColor="#B376F7"
                    android:gravity="start"/>

            </LinearLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.constraintlayout.widget.ConstraintLayout>